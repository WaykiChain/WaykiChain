RESOBJ = mylib.o

CXX_SRCS =

CXX_OBJS =

DEPS +=

default:all

$(OBJS):%o:%cpp
	$(CXX) -c $(CPPFLAGS) $< -o $@ $(INC)

mylib.o : mylib.rc
	$(RES)  -o $@ $<

all:$(TARGET)

$(TARGET): $(OBJS) $(RESOBJ)
	$(CXX) -shared $(OBJS) $(RESOBJ) ./leveldb/libleveldb.a  ./leveldb/libmemenv.a  -o $@ $(LDFLAGS)
	touch vm/lmylib.cpp
	touch vm/vmlua.cpp

touch:
	touch vm/lmylib.cpp
	touch vm/vmlua.cpp

clean:
	$(RM) $(TARGET) $(OBJS) $(RESOBJ)
