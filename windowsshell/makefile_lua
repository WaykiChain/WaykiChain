CXX = g++

RES = windres

#DEBUGFLAGS = -g3 -O0 -DDEBUG
DEBUGFLAGS =

CPPFLAGS = -std=c++11 $(DEBUGFLAGS) -DHAVE_WORKING_BOOST_SLEEP  -Wstack-protector -fstack-protector-all  -DWIN32 -DWIN_DLL

DEPS_PATH = /c/deps

RM = rm -f

TARGET	=  	mylib.dll

INC = \
